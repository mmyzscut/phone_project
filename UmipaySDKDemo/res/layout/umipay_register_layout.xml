<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/umipay_main_content_layout"
    android:layout_width="@dimen/umipay_main_diglog_width"
    android:layout_height="240dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/umipay_background_bottom_radius">

    <RelativeLayout
        android:id="@+id/umipay_account_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/umipay_name_box"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="35dp"
            android:textSize="14sp"
            android:textColorHint="#959595"
            android:textColor="#434343"
            android:maxLength="40"
            android:inputType="textEmailAddress"
            android:background="@drawable/umipay_editbox_background"
            android:hint="@string/umipay_reg_name_hint"
            android:imeOptions="flagNoExtractUi|actionNext"/>


        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/umipay_account"
            android:contentDescription="@string/umipay_account_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/umipay_password_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/umipay_account_box_layout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/umipay_psw_box"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="35dp"
            android:textSize="14sp"
            android:textColorHint="#959595"
            android:textColor="#434343"
            android:maxLength="40"
            android:inputType="textEmailAddress"
            android:background="@drawable/umipay_editbox_background"
            android:hint="@string/umipay_reg_psw_hint"
            android:imeOptions="flagNoExtractUi|actionNext"/>


        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/umipay_password"
            android:contentDescription="@string/umipay_pw_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/umipay_phone_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/umipay_password_box_layout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/umipay_phone_box"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="35dp"
            android:textSize="14sp"
            android:textColorHint="#959595"
            android:textColor="#434343"
            android:maxLength="40"
            android:inputType="phone"
            android:digits="0123456789"
            android:background="@drawable/umipay_editbox_background"
            android:hint="@string/umipay_reg_phone_hint"
            android:imeOptions="flagNoExtractUi|actionDone"/>


        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/umipay_phone_icon"
            android:contentDescription="@string/umipay_phone_logo" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/umipay_agreement"
        android:layout_below="@id/umipay_phone_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/umipay_layout_pressed"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="@string/umipay_register_agreement"
        android:clickable="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="#1badf6"
        android:text="@string/umipay_register_ouwan_ag"
        android:clickable="false"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/umipay_phone_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:id="@+id/umipay_bind_phone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:background="@null">

            <CheckBox
                android:id="@+id/umipay_bind_phone_cb"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/umipay_checkbox_default"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:textColor="#717171"
                android:text="@string/umipay_bind_phone"
                android:clickable="false" />
        </LinearLayout>

        <Button
            android:id="@+id/umipay_register_btn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/umipay_btn_blue"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="@string/umipay_register" />
    </RelativeLayout>
</RelativeLayout>