<resources>

    <style name="ButtonBarButton" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>
    <style name="ButtonBarButton_land" >
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">@null</item>
    </style>
    
    <style name="ButtonBarRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:background">@null</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="ButtonBarRow_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@null</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    
    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:gravity">center</item>
        
    </style>
    
    <style name="Theme.Black.NoTitleBar.Fullscreen.demo" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

</resources>
